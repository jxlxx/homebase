TZ=UTC

# Database
GITEA__database__DB_TYPE=postgres
GITEA__database__HOST=gitea-db:5432
GITEA__database__NAME=gitea
GITEA__database__USER=gitea
GITEA__database__PASSWD=change_me_super_secret
POSTGRES_DB=gitea
POSTGRES_USER=gitea
POSTGRES_PASSWORD=change_me_super_secret

# Core metadata
GITEA_APP_NAME=Homebase Gitea
GITEA_DOMAIN=git.jxlxx.org
GITEA__server__ROOT_URL=https://git.jxlxx.org/
GITEA_LANDING_PAGE=explore
GITEA_DEFAULT_BRANCH=main

# SSH/LFS settings
GITEA_DISABLE_SSH=true
GITEA_START_SSH_SERVER=false
GITEA_SSH_PORT=2222
GITEA_LFS_START_SERVER=false

# Account / privacy defaults
GITEA_ALLOW_ONLY_EXTERNAL_REGISTRATION=true
GITEA_DISABLE_REGISTRATION=true
GITEA_REQUIRE_SIGNIN_VIEW=true
GITEA_DEFAULT_KEEP_EMAIL_PRIVATE=true
GITEA_DEFAULT_ALLOW_CREATE_ORGANIZATION=false
GITEA_DISABLE_REGULAR_ORG_CREATION=true
GITEA_ENABLE_USER_HEATMAP=false
GITEA_AUTO_WATCH_NEW_REPOS=false
GITEA_DEFAULT_USER_VISIBILITY=private
GITEA_DEFAULT_ORG_VISIBILITY=private
GITEA_ALLOWED_USER_VISIBILITY_MODES=private
GITEA_ENABLE_PUSH_CREATE_USER=false
GITEA_ENABLE_PUSH_CREATE_ORG=false

# UI / avatar
GITEA_SHOW_USER_EMAIL=false
GITEA_DISABLE_GRAVATAR=true
GITEA_ENABLE_FEDERATED_AVATAR=false

# Authentication / OpenID
GITEA_ENABLE_OPENID_SIGNIN=false
GITEA_ENABLE_OPENID_SIGNUP=false

# Repository uploads
GITEA_REPO_UPLOAD_ENABLED=true
GITEA_REPO_UPLOAD_ALLOWED_TYPES=*/*
GITEA_REPO_UPLOAD_MAX_SIZE=50
GITEA_REPO_UPLOAD_MAX_FILES=5

# Mailer (set ENABLED true + real values to activate)
GITEA_MAILER_ENABLED=false
GITEA_MAILER_FROM=noreply@git.jxlxx.org
GITEA_MAILER_PROTOCOL=smtp
GITEA_MAILER_SMTP_ADDR=smtp.example.com
GITEA_MAILER_SMTP_PORT=587
GITEA_MAILER_USER=mailer_username
GITEA_MAILER_PASSWORD=change_me_mailer_password

# OAuth2 token lifetime (hours)
GITEA__oauth2__REFRESH_TOKEN_EXPIRATION_TIME=720

# Secrets
GITEA_SECRET_KEY=change_me_secret_key
GITEA_INTERNAL_TOKEN=change_me_internal_token
GITEA_JWT_SECRET=change_me_jwt_secret
GITEA__security__INSTALL_LOCK=true
